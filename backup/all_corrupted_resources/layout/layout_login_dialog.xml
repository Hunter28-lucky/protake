<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/click_view"
    android:tag="layout/layout_login_dialog_0"
    android:background="#00ffffff"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/login_dialog_vp"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <com.blink.academy.film.widgets.dialog.login.SignInView
            android:id="@+id/login_dialog_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.blink.academy.film.widgets.dialog.login.VerifyView
            android:id="@+id/login_dialog_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/indicator_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/login_dialog_vp">
        <ImageView
            android:id="@+id/login_dialog_indicator1"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/shape_drafts_bottom"
            android:contentDescription="@null"/>
        <ImageView
            android:id="@+id/login_dialog_indicator2"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/shape_drafts_bottom"
            android:contentDescription="@null"/>
    </LinearLayout>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:id="@+id/login_dialog_msg_tv"
        android:background="@drawable/bg_alert_view"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="INVALID NUMBER"
        android:layout_centerHorizontal="true"/>
    <View
        android:id="@+id/login_dialog_bottom_view"
        android:background="#00ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:layout_alignParentBottom="true"/>
    <View
        android:id="@+id/center_view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_centerInParent="true"/>
</RelativeLayout>
