<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:tag="layout/layout_input_pwd_0"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent">
        <EditText
            android:id="@+id/et"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:imeOptions="flagNoExtractUi|flagNoFullscreen"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/input_area"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <androidx.cardview.widget.CardView
            android:gravity="center"
            android:id="@+id/tv1_parent"
            android:clipChildren="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:translationZ="0dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardElevation="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/unit_parent">
            <TextView
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:id="@+id/tv_1"
                android:background="#1affffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAllCaps="true"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:gravity="center"
            android:id="@+id/tv2_parent"
            android:clipChildren="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:translationZ="0dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardElevation="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/unit_parent">
            <TextView
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:id="@+id/tv_2"
                android:background="#1affffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAllCaps="true"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:gravity="center"
            android:id="@+id/tv3_parent"
            android:clipChildren="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:translationZ="0dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardElevation="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/unit_parent">
            <TextView
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:id="@+id/tv_3"
                android:background="#1affffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAllCaps="true"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:gravity="center"
            android:id="@+id/tv4_parent"
            android:clipChildren="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:translationZ="0dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardElevation="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/unit_parent">
            <TextView
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:id="@+id/tv_4"
                android:background="#1affffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAllCaps="true"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:gravity="center"
            android:id="@+id/tv5_parent"
            android:clipChildren="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:translationZ="0dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardElevation="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/unit_parent">
            <TextView
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:id="@+id/tv_5"
                android:background="#1affffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAllCaps="true"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:gravity="center"
            android:id="@+id/tv6_parent"
            android:clipChildren="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:translationZ="0dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardElevation="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/unit_parent">
            <TextView
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:id="@+id/tv_6"
                android:background="#1affffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAllCaps="true"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
