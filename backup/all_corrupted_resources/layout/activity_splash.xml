<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_parent"
    android:tag="layout/activity_splash_0"
    android:background="@color/colorBlack"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_center"
        android:background="@color/colorBlack"
        android:clipChildren="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorBlack"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/root"
            android:background="@color/colorBlack"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/home_cameraview_pos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.blink.academy.film.widgets.GuideView
                android:id="@+id/home_guide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="@+id/home_cameraview_pos"
                app:layout_constraintLeft_toLeftOf="@+id/home_cameraview_pos"
                app:layout_constraintRight_toRightOf="@+id/home_cameraview_pos"
                app:layout_constraintTop_toTopOf="@+id/home_cameraview_pos"/>
            <com.blink.academy.film.widgets.AudioScheduleView
                android:id="@+id/home_audio_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/home_cameraview_pos"
                app:layout_constraintLeft_toLeftOf="@+id/home_cameraview_pos"/>
            <com.blink.academy.film.widgets.BatteryStorageView
                android:id="@+id/home_battery_storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/home_cameraview_pos"
                app:layout_constraintLeft_toRightOf="@+id/home_audio_schedule"/>
            <com.blink.academy.film.widgets.transmit.ChangeTintImageView
                android:id="@+id/home_iv_transmit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/home_cameraview_pos"
                app:layout_constraintLeft_toLeftOf="@+id/home_cameraview_pos"/>
            <com.blink.academy.film.widgets.transmit.BubbleBoxView
                android:id="@+id/transmit_bubble_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/home_iv_transmit"
                app:layout_constraintLeft_toLeftOf="@+id/home_iv_transmit"
                app:layout_constraintRight_toRightOf="@+id/home_iv_transmit"/>
            <com.blink.academy.film.widgets.StrokeTextView
                android:id="@+id/home_record_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/home_cameraview_pos"
                app:layout_constraintEnd_toEndOf="@+id/home_cameraview_pos"
                app:layout_constraintStart_toStartOf="@+id/home_cameraview_pos"/>
            <View
                android:id="@+id/home_record_frame_view"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/home_cameraview_pos"
                app:layout_constraintEnd_toEndOf="@+id/home_cameraview_pos"
                app:layout_constraintStart_toStartOf="@+id/home_cameraview_pos"/>
            <ImageView
                android:id="@+id/pro_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_50_mode_auto"
                app:layout_constraintBottom_toBottomOf="@+id/home_record_frame_view"
                app:layout_constraintRight_toLeftOf="@+id/record_btn"
                app:layout_constraintTop_toTopOf="@+id/home_record_frame_view"/>
            <ImageView
                android:id="@+id/grid_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_38_grids"
                app:layout_constraintBottom_toBottomOf="@+id/home_record_frame_view"
                app:layout_constraintRight_toLeftOf="@+id/pro_btn"
                app:layout_constraintTop_toTopOf="@+id/home_record_frame_view"/>
            <com.blink.academy.film.widgets.RecordButton
                android:id="@+id/record_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/home_cameraview_pos"
                app:layout_constraintRight_toRightOf="@+id/home_cameraview_pos"/>
            <FrameLayout
                android:id="@+id/torch_parent"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:layout_constraintBottom_toBottomOf="@+id/record_btn"
                app:layout_constraintRight_toLeftOf="@+id/home_cameraview_pos"
                app:layout_constraintTop_toTopOf="@+id/record_btn">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/torch_on_btn"
                    android:visibility="gone"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_36_torch_on"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/torch_off_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_36_torch_off"/>
            </FrameLayout>
            <RelativeLayout
                android:gravity="center_horizontal"
                android:id="@+id/home_right_parent"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/home_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_35_sidebar_max_brightness"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>
                <View
                    android:id="@+id/home_light_click"
                    android:layout_width="@dimen/_44dp"
                    android:layout_height="@dimen/_44dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:id="@+id/home_orientation"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_35_sidebar_screen_zoom"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>
                <View
                    android:id="@+id/home_orientation_click"
                    android:layout_width="@dimen/_44dp"
                    android:layout_height="@dimen/_44dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:id="@+id/home_clear_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_35_sidebar_clear"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>
                <View
                    android:id="@+id/home_vertical_click"
                    android:layout_width="@dimen/_44dp"
                    android:layout_height="@dimen/_44dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:id="@+id/home_clear_horizon"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_35_sidebar_clear_horizon"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>
                <View
                    android:id="@+id/home_horizon_click"
                    android:visibility="gone"
                    android:layout_width="@dimen/_44dp"
                    android:layout_height="@dimen/_44dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:id="@+id/home_screen_orientation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_35_sidebar_rotate_to_vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>
                <View
                    android:id="@+id/home_screen_orientation_click"
                    android:layout_width="@dimen/_44dp"
                    android:layout_height="@dimen/_44dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <com.blink.academy.film.widgets.camerainfo.DoubleTextLayout
                android:id="@+id/res_double_text_layout"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/home_cameraview_pos"
                app:layout_constraintTop_toTopOf="@+id/home_cameraview_pos"/>
            <com.blink.academy.film.widgets.camerainfo.DoubleTextLayout
                android:id="@+id/fps_double_text_layout"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/res_double_text_layout"
                app:layout_constraintTop_toTopOf="@+id/res_double_text_layout"/>
            <FrameLayout
                android:id="@+id/home_auto_switch_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="@+id/home_cameraview_pos"
                app:layout_constraintTop_toTopOf="@+id/home_cameraview_pos">
                <com.blink.academy.film.widgets.CircleBgView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/home_auto_switch_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_45_switch_camera"/>
            </FrameLayout>
            <ImageView
                android:id="@+id/setting_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_36_settings"
                app:layout_constraintRight_toRightOf="@+id/home_cameraview_pos"
                app:layout_constraintTop_toTopOf="@+id/home_cameraview_pos"/>
            <ImageView
                android:id="@+id/play_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_36_playback"
                app:layout_constraintRight_toLeftOf="@+id/setting_btn"
                app:layout_constraintTop_toTopOf="@+id/home_cameraview_pos"/>
            <ImageView
                android:id="@+id/color_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_36_looks"
                app:layout_constraintRight_toLeftOf="@+id/play_btn"
                app:layout_constraintTop_toTopOf="@+id/home_cameraview_pos"/>
            <ImageView
                android:id="@+id/beauty_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_60_beauty_default"
                app:layout_constraintBottom_toBottomOf="@+id/setting_btn"
                app:layout_constraintRight_toLeftOf="@+id/color_btn"
                app:layout_constraintTop_toTopOf="@+id/setting_btn"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_auto_zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#00ff0000"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <com.blink.academy.film.widgets.iso.AutoZoomWheelView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/auto_zoom_wheel"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <com.blink.academy.film.widgets.cover.ModeHintDialog
                android:id="@+id/mode_hint_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
