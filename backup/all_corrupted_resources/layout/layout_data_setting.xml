<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_data_setting_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.blink.academy.film.widgets.StrokeTextView
                android:id="@+id/tv_camera_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/SETTINGS_CAMERA_UNIT"
                android:textAllCaps="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.blink.academy.film.widgets.FilmStopView
                android:id="@+id/stop_camera_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_camera_unit"/>
            <com.blink.academy.film.widgets.StrokeTextView
                android:id="@+id/tv_reel_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/SETTINGS_REEL_NUMBER"
                android:textAllCaps="true"
                app:layout_constraintLeft_toLeftOf="@+id/tv_camera_unit"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.blink.academy.film.widgets.FilmStopView
                android:id="@+id/stop_reel_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/tv_camera_unit"
                app:layout_constraintTop_toBottomOf="@+id/tv_reel_number"/>
            <com.blink.academy.film.widgets.StrokeTextView
                android:id="@+id/tv_clip_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/SETTINGS_CLIP_COUNT"
                android:textAllCaps="true"
                app:layout_constraintLeft_toLeftOf="@+id/tv_reel_number"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.blink.academy.film.widgets.StrokeTextView
                android:id="@+id/tv_clicp_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00001"
                android:textAllCaps="true"
                app:layout_constraintLeft_toLeftOf="@+id/tv_clip_count"
                app:layout_constraintTop_toBottomOf="@+id/tv_clip_count"/>
            <com.blink.academy.film.widgets.StrokeTextView
                android:id="@+id/tv_suffix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/SETTINGS_SUFFIX"
                android:textAllCaps="true"
                app:layout_constraintLeft_toLeftOf="@+id/tv_clip_count"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.blink.academy.film.widgets.StrokeTextView
                android:id="@+id/tv_suffix_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="e2l3"
                android:textAllCaps="true"
                app:layout_constraintLeft_toLeftOf="@+id/tv_suffix"
                app:layout_constraintTop_toBottomOf="@+id/tv_suffix"/>
            <FrameLayout
                android:id="@+id/fl_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/tv_suffix_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_suffix_name">
                <com.blink.academy.film.widgets.StrokeRoundView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:id="@+id/tv_reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="reset"
                    android:textAllCaps="true"/>
            </FrameLayout>
            <View
                android:id="@+id/reset_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/tv_suffix_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_suffix_name"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/format_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.blink.academy.film.widgets.StrokeTextView
                android:id="@+id/tv_format"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/SETTINGS_FORMATS"
                android:textAllCaps="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.blink.academy.film.widgets.StrokeTextViewWithBottomBlock
                android:id="@+id/format_264"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                app:layout_constraintLeft_toLeftOf="@+id/tv_format"
                app:layout_constraintTop_toBottomOf="@+id/tv_format"/>
            <com.blink.academy.film.widgets.StrokeTextViewWithBottomBlock
                android:id="@+id/format_265"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                app:layout_constraintLeft_toRightOf="@+id/format_264"
                app:layout_constraintTop_toTopOf="@+id/format_264"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.blink.academy.film.widgets.StrokeTextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/SETTINGS_LOCATION"
                android:textAllCaps="true"/>
            <com.blink.academy.film.widgets.SwitchButton
                android:id="@+id/sb_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sb_text_check="@string/TOGGLE_ON"
                app:sb_text_uncheck="@string/TOGGLE_OFF"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
