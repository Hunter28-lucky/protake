<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_shutter_view_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.blink.academy.film.widgets.StrokeTextView
        android:gravity="center"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RECORDING_INFO_SHUTTER"
        android:textAllCaps="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_content"
        android:background="@color/colorHalfBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_title">
        <com.blink.academy.film.widgets.StrokeTextView
            android:gravity="center"
            android:id="@+id/tv_auto_exposure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="@+id/sb_auto_exposure"
            app:layout_constraintRight_toRightOf="@+id/sb_auto_exposure"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.blink.academy.film.widgets.SwitchButton
            android:id="@+id/sb_auto_exposure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_auto_exposure"
            app:sb_text_check="@string/TOGGLE_ON"
            app:sb_text_uncheck="@string/TOGGLE_OFF"/>
        <FrameLayout
            android:id="@+id/stop_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sb_auto_exposure">
            <com.blink.academy.film.widgets.FilmStopView
                android:id="@+id/stop_opener"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.blink.academy.film.widgets.FilmStopView
                android:id="@+id/stop_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/sb_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/stop_view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/stop_view">
            <com.blink.academy.film.widgets.FilmSeekBar
                android:id="@+id/sb_angel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.blink.academy.film.widgets.FilmSeekBar
                android:id="@+id/sb_speed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/rv_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/tv_speed"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_gravity="start|center_vertical"
                android:id="@+id/rv_angel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_gravity="start|center_vertical"
                android:id="@+id/rv_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <com.blink.academy.film.widgets.StrokeTextViewWithBottomBlock
            android:id="@+id/tv_angel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/sb_auto_exposure"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.blink.academy.film.widgets.StrokeTextViewWithBottomBlock
            android:id="@+id/tv_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/tv_angel"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
