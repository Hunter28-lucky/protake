<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_record_setting2_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <com.blink.academy.film.widgets.StrokeTextView
            android:id="@+id/tv_hdmi_performance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SETTINGS_PERFORMANCE_MODE"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="@+id/sb_performance"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.blink.academy.film.widgets.SwitchButton
            android:id="@+id/sb_performance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_hdmi_performance"
            app:sb_text_check="@string/TOGGLE_ON"
            app:sb_text_uncheck="@string/TOGGLE_OFF"/>
        <ImageView
            android:id="@+id/iv_performance_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_30_info"
            app:layout_constraintBottom_toBottomOf="@+id/sb_performance"
            app:layout_constraintLeft_toRightOf="@+id/sb_performance"
            app:layout_constraintTop_toTopOf="@+id/sb_performance"/>
        <View
            android:id="@+id/v_performance_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/iv_performance_info"
            app:layout_constraintLeft_toLeftOf="@+id/iv_performance_info"
            app:layout_constraintRight_toRightOf="@+id/iv_performance_info"
            app:layout_constraintTop_toTopOf="@+id/iv_performance_info"/>
        <com.blink.academy.film.widgets.StrokeTextView
            android:id="@+id/tv_vertical_video"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SETTINGS_TITLE_ORIENTATION_VERTICAL"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="@+id/sb_vertical_video"
            app:layout_constraintTop_toBottomOf="@+id/sb_performance"/>
        <com.blink.academy.film.widgets.SwitchButton
            android:id="@+id/sb_vertical_video"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_vertical_video"
            app:sb_text_check="@string/TOGGLE_ON"
            app:sb_text_uncheck="@string/TOGGLE_OFF"/>
        <com.blink.academy.film.widgets.StrokeTextView
            android:id="@+id/tv_flicker"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SETTINGS_FLICKER_REDUCTION"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="@+id/tv_vertical_video"
            app:layout_constraintTop_toBottomOf="@+id/sb_vertical_video"/>
        <com.blink.academy.film.widgets.StrokeTextViewWithBottomBlock
            android:id="@+id/flicker_50"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="@+id/tv_vertical_video"
            app:layout_constraintTop_toBottomOf="@+id/tv_flicker"/>
        <com.blink.academy.film.widgets.StrokeTextViewWithBottomBlock
            android:id="@+id/flicker_60"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            app:layout_constraintLeft_toRightOf="@+id/flicker_50"
            app:layout_constraintTop_toTopOf="@+id/flicker_50"/>
        <com.blink.academy.film.widgets.StrokeTextView
            android:id="@+id/tv_mirror_selfie_record"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SETTINGS_MIRRORED_SELFIE"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="@+id/sb_mirror_slefie_record"
            app:layout_constraintTop_toBottomOf="@+id/sb_vertical_video"/>
        <com.blink.academy.film.widgets.SwitchButton
            android:id="@+id/sb_mirror_slefie_record"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_mirror_selfie_record"
            app:sb_text_check="@string/TOGGLE_ON"
            app:sb_text_uncheck="@string/TOGGLE_OFF"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
