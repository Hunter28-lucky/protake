<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:tag="layout/layout_portrait_accessories_0"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_zhiyun"
                android:background="#161616"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/line_zhiyun_top"
                    android:background="@color/settingLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <TextView
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:id="@+id/tv_zhiyun"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/SETTINGS_ACCESORRIES_ZHIYUN"/>
                <Switch
                    android:id="@+id/sb_zhiyun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/setting_switch_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:track="@drawable/setting_switch_track_selector"/>
                <View
                    android:id="@+id/zhiyun_switch_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <com.blink.academy.film.widgets.OneTakeProgressBar
                    android:id="@+id/pb_zhiyun"
                    android:visibility="gone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="#ffffff"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:indeterminateTint="#ffffff"/>
                <View
                    android:id="@+id/line_zhiyun_bottom"
                    android:background="@color/settingLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_anamo"
