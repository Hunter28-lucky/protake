<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:tag="layout/layout_iso_et_wheel_0"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.blink.academy.film.widgets.iso.WheelProgressView
        android:id="@+id/et_wheel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.blink.academy.film.widgets.iso.WheelProgressView
        android:id="@+id/iso_wheel"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.blink.academy.film.widgets.iso.WheelProgressView
        android:id="@+id/shutter_wheel"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.blink.academy.film.widgets.iso.WheelIndicatorView
        android:layout_gravity="end|center_vertical"
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="180"/>
    <com.blink.academy.film.widgets.StrokeTextView
        android:gravity="center"
        android:layout_gravity="end|center_vertical"
        android:id="@+id/tv_exposure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="90"
        android:textAllCaps="true"/>
    <com.blink.academy.film.widgets.StrokeTextView
        android:gravity="center"
        android:layout_gravity="end|center_vertical"
        android:id="@+id/tv_iso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="90"/>
    <com.blink.academy.film.widgets.StrokeTextView
        android:gravity="center"
        android:layout_gravity="end|center_vertical"
        android:id="@+id/tv_shutter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="90"/>
    <LinearLayout
        android:layout_gravity="end|center_vertical"
        android:orientation="vertical"
        android:id="@+id/tv_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_shutter"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <RelativeLayout
            android:id="@+id/rl_iso"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <ImageView
        android:layout_gravity="end|center_vertical"
        android:id="@+id/iv_wheel_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_34_ae"
        android:scaleType="centerInside"/>
    <com.blink.academy.film.widgets.iso.WheelBorderView
        android:id="@+id/protake_focus_border"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
