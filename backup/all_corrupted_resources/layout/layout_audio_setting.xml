<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_audio_setting_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.blink.academy.film.widgets.StrokeTextView
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/bottom_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_25dp"
            android:text="@string/RECORDING_SETTINGS_TITLE_AUDIO"
            android:textAllCaps="true"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/bottom_container"
            android:background="@color/colorHalfBlack"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/audio_type_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:id="@+id/bottom_options"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/audio_options_list"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"/>
                <com.blink.academy.film.widgets.FilmStopView
                    android:id="@+id/audio_stop_view"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>
                <com.blink.academy.film.widgets.FilmSeekBar
                    android:id="@+id/sb_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/audio_stop_view"
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/bottom_auto"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/sb_audio"
                    android:layout_centerVertical="true">
                    <com.blink.academy.film.widgets.StrokeTextView
                        android:textColor="@color/colorWhite"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/bottom_auto_tv"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/RECORDING_SETTINGS_AUDIO_MICROPHONE_AUTO_GAIN"
                        android:textAllCaps="true"/>
                    <com.blink.academy.film.widgets.SwitchButton
                        android:layout_gravity="center_vertical"
                        android:id="@+id/audio_auto_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:sb_text_check="@string/TOGGLE_ON"
                        app:sb_text_uncheck="@string/TOGGLE_OFF"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
