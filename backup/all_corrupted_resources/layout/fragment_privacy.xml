<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:id="@+id/root_view"
    android:tag="layout/fragment_privacy_0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:translationZ="0dp"
    app:cardBackgroundColor="#ffba00"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="14dp"
            android:textColor="@color/colorBlack"
            android:id="@+id/signin_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/LABEL_ALERT"
            android:layout_centerHorizontal="true"
            android:textAllCaps="true"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/colorBlack"
            android:gravity="start"
            android:id="@+id/signin_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom"
            android:layout_below="@+id/signin_tv_title"
            android:lineSpacingExtra="2dp"/>
        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/signin_ll_back"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true">
                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/icon_7_next"
                    android:tint="@color/colorBlack"
                    android:contentDescription="@null"
                    android:scaleX="-1"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:id="@+id/signin_tv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/BUTTON_BACK"
                    android:textAllCaps="true"/>
            </LinearLayout>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/colorBlack"
                android:gravity="center"
                android:id="@+id/signin_tv_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/LABEL_NOT_AGREE"
                android:alpha="0.3"
                android:textAllCaps="true"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/signin_ll_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/signin_tv_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/LABEL_AGREE"
                    android:textAllCaps="true"/>
                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/icon_7_next"
                    android:tint="@color/colorBlack"
                    android:contentDescription="@null"/>
            </LinearLayout>
            <com.blink.academy.film.widgets.OneTakeProgressBar
                android:id="@+id/signin_next_pb"
                android:visibility="gone"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/click_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</androidx.cardview.widget.CardView>
