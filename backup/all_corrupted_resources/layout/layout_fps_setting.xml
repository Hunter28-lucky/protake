<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_fps_setting_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.blink.academy.film.widgets.StrokeTextView
        android:textSize="@dimen/fontRegular15"
        android:textColor="@color/colorWhite"
        android:id="@+id/bottom_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_25dp"
        android:text="@string/RECORDING_SETTINGS_TITLE_FPS"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@+id/bottom_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_container"
        android:background="@color/colorHalfBlack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fps_setting_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <HorizontalScrollView
            android:id="@+id/fps_list_scroll"
            android:scrollbars="none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fps_setting_auto_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <ImageView
                    android:id="@+id/fps_setting_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_30_info"
                    app:layout_constraintLeft_toRightOf="@+id/fps_setting_auto_list"
                    app:layout_constraintTop_toTopOf="parent"/>
                <View
                    android:id="@+id/fps_setting_info_click"
                    android:layout_width="@dimen/_44dp"
                    android:layout_height="@dimen/_44dp"
                    app:layout_constraintLeft_toRightOf="@+id/fps_setting_auto_list"
                    app:layout_constraintTop_toTopOf="parent"/>
                <View
                    android:id="@+id/list_area_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toRightOf="@+id/fps_setting_info_click"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>
        <com.blink.academy.film.widgets.StrokeTextView
            android:textSize="@dimen/fontRegular12"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:id="@+id/fps_switch_timelapse_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/RECORDING_FPS_TIMELAPSE"
            android:textAllCaps="true"
            app:layout_constraintBottom_toTopOf="@+id/fps_setting_switch"
            app:layout_constraintLeft_toLeftOf="@+id/fps_setting_switch"
            app:layout_constraintRight_toRightOf="@+id/fps_setting_switch"/>
        <com.blink.academy.film.widgets.SwitchButton
            android:id="@+id/fps_setting_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_50dp"
            android:layout_marginRight="@dimen/_50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/fps_list_scroll"
            app:layout_constraintRight_toLeftOf="@+id/fps_setting_timelapse"
            app:layout_constraintTop_toTopOf="parent"
            app:sb_text_check="@string/TOGGLE_ON"
            app:sb_text_uncheck="@string/TOGGLE_OFF"/>
        <com.blink.academy.film.widgets.FilmStopView
            android:gravity="center"
            android:id="@+id/fps_setting_timelapse"
            android:layout_width="@dimen/_100dp"
            android:layout_height="@dimen/_50dp"
            android:layout_marginRight="@dimen/_50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/fps_setting_switch"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fps_bottom_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fps_list_scroll">
            <com.blink.academy.film.widgets.StrokeTextView
                android:textSize="@dimen/fontRegular12"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:id="@+id/fps_setting_auto_switch_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/RECORDING_FPS_TIMELAPSE"
                android:textAllCaps="true"
                app:layout_constraintBottom_toTopOf="@+id/fps_setting_auto_switch"
                app:layout_constraintLeft_toLeftOf="@+id/fps_setting_auto_switch"
                app:layout_constraintRight_toRightOf="@+id/fps_setting_auto_switch"/>
            <com.blink.academy.film.widgets.SwitchButton
                android:id="@+id/fps_setting_auto_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/fps_setting_auto_timelapse"
                app:layout_constraintTop_toTopOf="parent"
                app:sb_text_check="@string/TOGGLE_ON"
                app:sb_text_uncheck="@string/TOGGLE_OFF"/>
            <com.blink.academy.film.widgets.StrokeTextView
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:id="@+id/fps_setting_auto_timelapse_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                app:layout_constraintBottom_toTopOf="@+id/fps_setting_auto_timelapse"
                app:layout_constraintLeft_toLeftOf="@+id/fps_setting_auto_timelapse"
                app:layout_constraintRight_toRightOf="@+id/fps_setting_auto_timelapse"/>
            <com.blink.academy.film.widgets.FilmStopView
                android:gravity="center"
                android:id="@+id/fps_setting_auto_timelapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/fps_setting_auto_switch"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
