<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_accessories_view_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_zhiyun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#ffffff"
            android:gravity="center"
            android:id="@+id/tv_zhiyun"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/SETTINGS_ACCESORRIES_ZHIYUN"/>
        <com.blink.academy.film.widgets.SwitchButton2
            android:id="@+id/sb_zhiyun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:sb_text_check="@string/TOGGLE_ON"
            app:sb_text_uncheck="@string/TOGGLE_OFF"/>
        <com.blink.academy.film.widgets.OneTakeProgressBar
            android:id="@+id/pb_zhiyun"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tint="#ffffff"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:indeterminateTint="#ffffff"/>
    </RelativeLayout>
    <View
        android:id="@+id/v_line_0"
        android:background="@drawable/preset_divider_item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_zhiyun"/>
    <RelativeLayout
        android:id="@+id/rl_anamo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_line_0">
        <TextView
            android:textColor="#ffffff"
            android:gravity="center"
            android:id="@+id/tv_anamo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/SETTINGS_ACCESORRIES_ANAMORPHIC"/>
        <com.blink.academy.film.widgets.SwitchButton
            android:id="@+id/sb_anamo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:sb_text_check="@string/TOGGLE_ON"
            app:sb_text_uncheck="@string/TOGGLE_OFF"/>
    </RelativeLayout>
    <View
        android:id="@+id/v_line_1"
        android:background="@drawable/preset_divider_item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_anamo"/>
    <RelativeLayout
        android:id="@+id/rl_1_55"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_line_1">
        <TextView
            android:textColor="#ffffff"
            android:gravity="center"
            android:id="@+id/tv_1_55"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/SETTINGS_ACCESORRIES_ANAMORPHIC2"/>
        <com.blink.academy.film.widgets.SwitchButton
            android:id="@+id/sb_1_55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:sb_text_check="@string/TOGGLE_ON"
            app:sb_text_uncheck="@string/TOGGLE_OFF"/>
    </RelativeLayout>
    <View
        android:id="@+id/v_line_2"
        android:background="@drawable/preset_divider_item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_1_55"/>
</RelativeLayout>
