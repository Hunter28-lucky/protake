<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_double_text_0"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.blink.academy.film.widgets.StrokeTextView
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:id="@+id/top_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RES"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/top_right_iv"
        android:visibility="gone"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/icon_13_auto"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/top_name_tv"
        app:layout_constraintLeft_toRightOf="@+id/top_name_tv"
        app:layout_constraintTop_toTopOf="@+id/top_name_tv"/>
    <com.blink.academy.film.widgets.StrokeTextView
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:id="@+id/bottom_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1080P"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_name_tv"/>
    <ImageView
        android:id="@+id/bottom_value_right_iv"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_value_tv"
        app:layout_constraintLeft_toRightOf="@+id/bottom_value_tv"
        app:layout_constraintTop_toTopOf="@+id/bottom_value_tv"/>
    <com.blink.academy.film.widgets.StrokeTextView
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:id="@+id/bottom_value_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/bottom_value_right_iv"
        app:layout_constraintTop_toBottomOf="@+id/top_name_tv"/>
    <ImageView
        android:id="@+id/bottom_value_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        app:layout_constraintLeft_toLeftOf="@+id/bottom_value_tv"
        app:layout_constraintTop_toBottomOf="@+id/top_name_tv"
        app:layout_constraintTop_toTopOf="@+id/bottom_value_tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>
