<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_zebra_setting_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.blink.academy.film.widgets.StrokeTextView
        android:textSize="@dimen/fontRegular15"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:id="@+id/bottom_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_25dp"
        android:text="@string/RECORDING_SETTINGS_TITLE_ASSISTANTS"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@+id/bottom_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/bottom_container"
        android:background="@color/colorHalfBlack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/zebra_setting_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/bottom_auto"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <com.blink.academy.film.widgets.StrokeTextView
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/bottom_auto_tv"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/RECORDING_ASSISTANTS_AUTO"
                android:layout_above="@+id/zebra_auto_switch"
                android:layout_centerHorizontal="true"
                android:textAllCaps="true"/>
            <com.blink.academy.film.widgets.SwitchButton
                android:id="@+id/zebra_auto_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:sb_text_check="@string/TOGGLE_ON"
                app:sb_text_uncheck="@string/TOGGLE_OFF"/>
        </RelativeLayout>
        <View
            android:id="@+id/zebra_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
