<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_looks_setting_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.blink.academy.film.widgets.StrokeTextView
        android:textColor="@color/colorWhite"
        android:id="@+id/bottom_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RECORDING_SETTINGS_TITLE_LOOKS"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@+id/bottom_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <RelativeLayout
        android:id="@+id/fl_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/bottom_container"
        app:layout_constraintLeft_toRightOf="@+id/bottom_setting_title">
        <com.blink.academy.film.widgets.StrokeRoundView
            android:id="@+id/stroke_round"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:id="@+id/tv_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/BUTTON_RESET_ALL"
            android:layout_centerInParent="true"
            android:textAllCaps="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/looks_reset_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/bottom_setting_title"
        app:layout_constraintBottom_toTopOf="@+id/bottom_container"
        app:layout_constraintLeft_toRightOf="@+id/bottom_setting_title"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/bottom_container"
        android:background="@color/colorHalfBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/looks_type_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/bottom_options"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">
            <com.blink.academy.film.widgets.looks.StyleUpdateView
                android:id="@+id/looks_update"
                android:paddingLeft="@dimen/_20dp"
                android:paddingRight="@dimen/_20dp"
                android:paddingBottom="@dimen/_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingHorizontal="@dimen/_20dp"/>
            <com.blink.academy.film.widgets.looks.FilmStopRecycleView
                android:id="@+id/looks_stop_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"/>
            <com.blink.academy.film.widgets.looks.StyleDownloadingView
                android:id="@+id/looks_download"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.blink.academy.film.widgets.FilmStopView
                android:id="@+id/looks_stop_view"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>
            <RelativeLayout
                android:gravity="center"
                android:id="@+id/seek_bar_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/looks_stop_view"
                android:layout_centerVertical="true">
                <com.blink.academy.film.widgets.FilmSeekBar
                    android:id="@+id/sb_looks"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
