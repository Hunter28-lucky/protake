<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_item_device_connected_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.blink.academy.film.widgets.StrokeTextView
        android:id="@+id/tv_wifi_device_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2H38（导演）"
        app:layout_constraintBottom_toBottomOf="@+id/iv_wifi_strength_parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_control_state_parent"
        app:layout_constraintTop_toTopOf="@+id/iv_control_state_parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/iv_wifi_strength_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.blink.academy.film.widgets.transmit.ChangeTintImageView
            android:id="@+id/iv_wifi_strength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/iv_wifi_click"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_44dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_wifi_strength_parent"
        app:layout_constraintLeft_toLeftOf="@+id/iv_wifi_strength_parent"
        app:layout_constraintTop_toTopOf="@+id/iv_wifi_strength_parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/iv_control_state_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/iv_wifi_strength_parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_wifi_strength_parent"
        app:layout_constraintTop_toTopOf="@+id/iv_wifi_strength_parent">
        <com.blink.academy.film.widgets.transmit.ChangeTintImageView
            android:id="@+id/iv_control_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/iv_control_click"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_44dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_control_state_parent"
        app:layout_constraintLeft_toLeftOf="@+id/iv_control_state_parent"
        app:layout_constraintTop_toTopOf="@+id/iv_control_state_parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
