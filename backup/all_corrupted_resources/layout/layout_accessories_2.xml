<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_accessories_2_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_dof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#ffffff"
            android:gravity="center"
            android:id="@+id/tv_dof"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/SETTINGS_ACCESORRIES_DOF_ADAPTER"/>
        <com.blink.academy.film.widgets.SwitchButton
            android:id="@+id/sb_dof"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:sb_text_check="@string/TOGGLE_ON"
            app:sb_text_uncheck="@string/TOGGLE_OFF"/>
    </RelativeLayout>
    <View
        android:id="@+id/v_line_0"
        android:background="@drawable/preset_divider_item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_dof"/>
    <RelativeLayout
        android:id="@+id/rl_protake_focus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_line_0">
        <TextView
            android:textColor="#ffffff"
            android:gravity="center"
            android:id="@+id/tv_protake_focus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/SETTINGS_ACCESORRIES_PROTAKE_FOCUS"/>
        <com.blink.academy.film.widgets.SwitchButton2
            android:id="@+id/sb_protake_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:sb_text_check="@string/TOGGLE_ON"
            app:sb_text_uncheck="@string/TOGGLE_OFF"/>
        <com.blink.academy.film.widgets.OneTakeProgressBar
            android:id="@+id/pb_protake_focus"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tint="#ffffff"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:indeterminateTint="#ffffff"/>
    </RelativeLayout>
    <View
        android:id="@+id/v_line_2"
        android:background="@drawable/preset_divider_item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_protake_focus"/>
    <RelativeLayout
        android:id="@+id/rl_reverse_focus_wheel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_line_2">
        <TextView
            android:textColor="#ffffff"
            android:gravity="center"
            android:id="@+id/tv_reverse_focus_wheel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/SETTINGS_REVERSE_FOCUS_WHEEL"/>
        <com.blink.academy.film.widgets.SwitchButton2
            android:id="@+id/sb_reverse_focus_wheel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:sb_text_check="@string/TOGGLE_ON"
            app:sb_text_uncheck="@string/TOGGLE_OFF"/>
    </RelativeLayout>
    <View
        android:id="@+id/v_line_1"
        android:background="@drawable/preset_divider_item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_reverse_focus_wheel"/>
</RelativeLayout>
