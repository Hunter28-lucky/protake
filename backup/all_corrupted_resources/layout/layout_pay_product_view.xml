<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:tag="layout/layout_pay_product_view_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_100_protake_cloud"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.blink.academy.film.widgets.FilmTextView
            android:textColor="@color/colorBlack"
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_logo"/>
        <include
            android:id="@+id/productLayout1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/productLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_info"
            layout="@layout/item_pay_product"/>
        <View
            android:id="@+id/line1"
            android:background="@color/colorBlack"
            android:visibility="gone"
            android:layout_width="1px"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/productLayout3"
            app:layout_constraintEnd_toStartOf="@+id/productLayout2"
            app:layout_constraintStart_toEndOf="@+id/productLayout1"
            app:layout_constraintTop_toBottomOf="@+id/tv_info"/>
        <include
            android:id="@+id/productLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/productLayout3"
            app:layout_constraintStart_toEndOf="@+id/productLayout1"
            app:layout_constraintTop_toBottomOf="@+id/tv_info"
            layout="@layout/item_pay_product"/>
        <View
            android:id="@+id/line2"
            android:background="@color/colorBlack"
            android:visibility="gone"
            android:layout_width="1px"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/productLayout3"
            app:layout_constraintEnd_toStartOf="@+id/productLayout3"
            app:layout_constraintStart_toEndOf="@+id/productLayout2"
            app:layout_constraintTop_toBottomOf="@+id/tv_info"/>
        <include
            android:id="@+id/productLayout3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/productLayout2"
            app:layout_constraintTop_toBottomOf="@+id/tv_info"
            layout="@layout/item_pay_product"/>
        <LinearLayout
            android:id="@+id/rel_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/productLayout1">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_20_sign_in_black"/>
            <TextView
                android:textColor="@color/colorBlack"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BUTTON_LOGIN_RESTORE_PURCHASE"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
