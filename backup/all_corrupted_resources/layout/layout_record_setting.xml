<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_record_setting_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <com.blink.academy.film.widgets.StrokeTextView
            android:id="@+id/tv_frame_drop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SETTINGS_FRAMEDROP_NOTICE"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="@+id/sb_frame_drop"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.blink.academy.film.widgets.SwitchButton
            android:id="@+id/sb_frame_drop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/sb_noise_reduction"
            app:layout_constraintTop_toBottomOf="@+id/tv_frame_drop"
            app:sb_text_check="@string/TOGGLE_ON"
            app:sb_text_uncheck="@string/TOGGLE_OFF"/>
        <com.blink.academy.film.widgets.StrokeTextView
            android:id="@+id/tv_vertical_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SETTINGS_TITLE_ORIENTATION_VERTICAL"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="@+id/sb_vertical_video"
            app:layout_constraintTop_toBottomOf="@+id/sb_rec_beeper"/>
        <com.blink.academy.film.widgets.SolidPointView
            android:id="@+id/point_vertical_video"
            android:layout_width="6dp"
            android:layout_height="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_vertical_video"
            app:layout_constraintLeft_toLeftOf="@+id/tv_vertical_video"
            app:layout_constraintTop_toTopOf="@+id/tv_vertical_video"/>
        <com.blink.academy.film.widgets.SwitchButton
            android:id="@+id/sb_vertical_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_vertical_video"
            app:sb_text_check="@string/TOGGLE_ON"
            app:sb_text_uncheck="@string/TOGGLE_OFF"/>
        <com.blink.academy.film.widgets.StrokeTextView
            android:id="@+id/tv_flicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SETTINGS_FLICKER_REDUCTION"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="@+id/tv_vertical_video"
            app:layout_constraintTop_toBottomOf="@+id/sb_vertical_video"/>
        <com.blink.academy.film.widgets.StrokeTextViewWithBottomBlock
            android:id="@+id/flicker_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="@+id/tv_vertical_video"
            app:layout_constraintTop_toBottomOf="@+id/tv_flicker"/>
        <com.blink.academy.film.widgets.StrokeTextViewWithBottomBlock
            android:id="@+id/flicker_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            app:layout_constraintLeft_toRightOf="@+id/flicker_50"
            app:layout_constraintTop_toTopOf="@+id/flicker_50"/>
        <com.blink.academy.film.widgets.StrokeTextView
            android:id="@+id/tv_stabilization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SETTINGS_STABILIZATION"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="@+id/sb_stabilization"
            app:layout_constraintTop_toBottomOf="@+id/sb_rec_beeper"/>
        <com.blink.academy.film.widgets.SwitchButton
            android:id="@+id/sb_stabilization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/sb_vertical_video"
            app:layout_constraintTop_toBottomOf="@+id/tv_stabilization"
            app:sb_text_check="@string/TOGGLE_ON"
            app:sb_text_uncheck="@string/TOGGLE_OFF"/>
        <ImageView
            android:id="@+id/iv_stabilization_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_30_info"
            app:layout_constraintBottom_toBottomOf="@+id/sb_stabilization"
            app:layout_constraintLeft_toRightOf="@+id/sb_stabilization"
            app:layout_constraintTop_toTopOf="@+id/sb_stabilization"/>
        <View
            android:id="@+id/v_stabilization_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/iv_stabilization_info"
            app:layout_constraintLeft_toLeftOf="@+id/iv_stabilization_info"
            app:layout_constraintRight_toRightOf="@+id/iv_stabilization_info"
            app:layout_constraintTop_toTopOf="@+id/iv_stabilization_info"/>
        <com.blink.academy.film.widgets.StrokeTextView
            android:id="@+id/tv_noise_reduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SETTINGS_NOISE_REDUCTION"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="@+id/sb_noise_reduction"
            app:layout_constraintTop_toBottomOf="@+id/sb_rec_beeper"/>
        <com.blink.academy.film.widgets.SwitchButton
            android:id="@+id/sb_noise_reduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/sb_stabilization"
            app:layout_constraintTop_toBottomOf="@+id/tv_noise_reduction"
            app:sb_text_check="@string/TOGGLE_ON"
            app:sb_text_uncheck="@string/TOGGLE_OFF"/>
        <com.blink.academy.film.widgets.StrokeTextView
            android:id="@+id/tv_framework"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SETTINGS_RECORDING_FRAMEWORK"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="@+id/tv_stabilization"
            app:layout_constraintTop_toBottomOf="@+id/sb_noise_reduction"/>
        <com.blink.academy.film.widgets.StrokeTextViewWithBottomBlock
            android:id="@+id/framework_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="@+id/tv_framework"
            app:layout_constraintTop_toBottomOf="@+id/tv_framework"/>
        <com.blink.academy.film.widgets.StrokeTextViewWithBottomBlock
            android:id="@+id/framework_taker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            app:layout_constraintLeft_toRightOf="@+id/framework_auto"
            app:layout_constraintTop_toTopOf="@+id/framework_auto"/>
        <com.blink.academy.film.widgets.StrokeTextViewWithBottomBlock
            android:id="@+id/framework_sys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            app:layout_constraintLeft_toRightOf="@+id/framework_taker"
            app:layout_constraintTop_toTopOf="@+id/framework_auto"/>
        <ImageView
            android:id="@+id/iv_framework_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_30_info"
            app:layout_constraintBottom_toBottomOf="@+id/framework_sys"
            app:layout_constraintLeft_toRightOf="@+id/framework_sys"
            app:layout_constraintTop_toTopOf="@+id/framework_sys"/>
        <com.blink.academy.film.widgets.StrokeTextView
            android:id="@+id/tv_edge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SETTINGS_EDGE_SHARPENING"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="@+id/sb_edge"
            app:layout_constraintTop_toBottomOf="@+id/sb_rec_beeper"/>
        <com.blink.academy.film.widgets.SwitchButton
            android:id="@+id/sb_edge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/sb_noise_reduction"
            app:layout_constraintTop_toBottomOf="@+id/tv_edge"
            app:sb_text_check="@string/TOGGLE_ON"
            app:sb_text_uncheck="@string/TOGGLE_OFF"/>
        <com.blink.academy.film.widgets.StrokeTextView
            android:id="@+id/tv_rec_beeper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SETTINGS_FRAMEDROP_NOTICE"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="@+id/tv_vertical_video"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.blink.academy.film.widgets.SwitchButton
            android:id="@+id/sb_rec_beeper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_rec_beeper"
            app:sb_text_check="@string/TOGGLE_ON"
            app:sb_text_uncheck="@string/TOGGLE_OFF"/>
        <com.blink.academy.film.widgets.StrokeTextView
            android:id="@+id/tv_rec_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SETTINGS_REC_FLASH"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="@+id/sb_stabilization"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.blink.academy.film.widgets.SwitchButton
            android:id="@+id/sb_rec_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/sb_vertical_video"
            app:layout_constraintTop_toBottomOf="@+id/tv_rec_flash"
            app:sb_text_check="@string/TOGGLE_ON"
            app:sb_text_uncheck="@string/TOGGLE_OFF"/>
        <com.blink.academy.film.widgets.StrokeTextView
            android:id="@+id/tv_auto_assistant"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SETTINGS_AUTO_ASSISTANTS"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="@+id/sb_auto_assistant"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.blink.academy.film.widgets.SwitchButton
            android:id="@+id/sb_auto_assistant"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/sb_stabilization"
            app:layout_constraintTop_toBottomOf="@+id/tv_auto_assistant"
            app:sb_text_check="@string/TOGGLE_ON"
            app:sb_text_uncheck="@string/TOGGLE_OFF"/>
        <com.blink.academy.film.widgets.StrokeTextView
            android:id="@+id/tv_volume_key_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SETTINGS_VOLUME_KEY_RECORD"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="@+id/sb_volume_key_record"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.blink.academy.film.widgets.SwitchButton
            android:id="@+id/sb_volume_key_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/sb_stabilization"
            app:layout_constraintTop_toBottomOf="@+id/tv_volume_key_record"
            app:sb_text_check="@string/TOGGLE_ON"
            app:sb_text_uncheck="@string/TOGGLE_OFF"/>
        <com.blink.academy.film.widgets.StrokeTextView
            android:id="@+id/tv_leica_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="@+id/tv_vertical_video"
            app:layout_constraintTop_toBottomOf="@+id/flicker_50"/>
        <com.blink.academy.film.widgets.StrokeTextViewWithBottomBlock
            android:id="@+id/leica_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="@+id/tv_leica_mode"
            app:layout_constraintTop_toBottomOf="@+id/tv_leica_mode"/>
        <com.blink.academy.film.widgets.StrokeTextViewWithBottomBlock
            android:id="@+id/leica_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            app:layout_constraintLeft_toRightOf="@+id/leica_off"
            app:layout_constraintTop_toTopOf="@+id/leica_off"/>
        <com.blink.academy.film.widgets.StrokeTextViewWithBottomBlock
            android:id="@+id/leica_vivid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            app:layout_constraintLeft_toRightOf="@+id/leica_standard"
            app:layout_constraintTop_toTopOf="@+id/leica_standard"/>
        <com.blink.academy.film.widgets.StrokeTextViewWithBottomBlock
            android:id="@+id/leica_smooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            app:layout_constraintLeft_toRightOf="@+id/leica_vivid"
            app:layout_constraintTop_toTopOf="@+id/leica_vivid"/>
        <com.blink.academy.film.widgets.StrokeTextView
            android:id="@+id/tv_mirror_selfie_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SETTINGS_MIRRORED_SELFIE"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="@+id/sb_mirror_slefie_record"
            app:layout_constraintTop_toBottomOf="@+id/sb_vertical_video"/>
        <com.blink.academy.film.widgets.SwitchButton
            android:id="@+id/sb_mirror_slefie_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/sb_stabilization"
            app:layout_constraintTop_toBottomOf="@+id/tv_mirror_selfie_record"
            app:sb_text_check="@string/TOGGLE_ON"
            app:sb_text_uncheck="@string/TOGGLE_OFF"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
