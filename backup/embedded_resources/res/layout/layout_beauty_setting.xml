<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_beauty_setting_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.blink.academy.film.widgets.StrokeTextView
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:id="@+id/bottom_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_25dp"
        android:text="@string/RECORDING_SETTINGS_BEAUTY"
        app:layout_constraintBottom_toTopOf="@+id/bottom_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <RelativeLayout
        android:id="@+id/fl_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/bottom_container"
        app:layout_constraintLeft_toRightOf="@+id/bottom_setting_title">
        <com.blink.academy.film.widgets.StrokeRoundView
            android:id="@+id/stroke_round"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:id="@+id/tv_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/BUTTON_RESET_ALL"
            android:layout_centerInParent="true"
            android:textAllCaps="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/looks_reset_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/bottom_setting_title"
        app:layout_constraintBottom_toTopOf="@+id/bottom_container"
        app:layout_constraintLeft_toRightOf="@+id/bottom_setting_title"/>
    <RelativeLayout
        android:id="@+id/fl_reset_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/bottom_container"
        app:layout_constraintLeft_toRightOf="@+id/bottom_setting_title">
        <com.blink.academy.film.widgets.StrokeRoundView
            android:id="@+id/stroke_round_current"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:id="@+id/tv_reset_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/BUTTON_RESET"
            android:layout_centerInParent="true"
            android:textAllCaps="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/beauty_reset_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/bottom_setting_title"
        app:layout_constraintBottom_toTopOf="@+id/bottom_container"
        app:layout_constraintLeft_toRightOf="@+id/bottom_setting_title"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/bottom_container"
        android:background="@color/colorHalfBlack"
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <HorizontalScrollView
            android:id="@+id/bottom_scroll_parent"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/bottom_list_parent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <com.blink.academy.film.widgets.SwitchButton
                    android:id="@+id/switch_beauty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:sb_text_check="@string/TOGGLE_ON"
                    app:sb_text_uncheck="@string/TOGGLE_OFF"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/beauty_setting_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/switch_beauty"/>
                <View
                    android:id="@+id/area_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/beauty_setting_list"/>
            </RelativeLayout>
        </HorizontalScrollView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_sb_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.blink.academy.film.widgets.FilmSeekBar
                android:id="@+id/sb_beauty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.blink.academy.film.widgets.StrokeTextView
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BUTTON_CANCEL"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/sb_beauty"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.blink.academy.film.widgets.StrokeTextView
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:id="@+id/tv_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BUTTON_OK"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/sb_beauty"
                app:layout_constraintTop_toTopOf="parent"/>
            <View
                android:id="@+id/cancel_click_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/tv_cancel"
                app:layout_constraintLeft_toLeftOf="@+id/tv_cancel"
                app:layout_constraintRight_toRightOf="@+id/tv_cancel"
                app:layout_constraintTop_toTopOf="@+id/tv_cancel"/>
            <View
                android:id="@+id/confirm_click_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/tv_confirm"
                app:layout_constraintLeft_toLeftOf="@+id/tv_confirm"
                app:layout_constraintRight_toRightOf="@+id/tv_confirm"
                app:layout_constraintTop_toTopOf="@+id/tv_confirm"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
