<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:tag="layout/fragment_checkphone_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textColor="@color/colorBlack"
        android:id="@+id/verify_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TITLE_VERIFY_PHONE_NUMBER"
        app:textAllCaps="true"/>
    <TextView
        android:textColor="@color/colorBlack"
        android:gravity="left"
        android:id="@+id/verify_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/DESC_VERIFY_PHONE_NUMBER"
        android:layout_below="@+id/verify_tv_title"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/checkPhone_tv_ll"
        android:clipChildren="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verify_tv_content"
        android:layout_centerHorizontal="true">
        <com.blink.academy.film.widgets.dialog.login.VerificationTextView
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:id="@+id/checkphone_start_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.blink.academy.film.widgets.VerificationCodeEditText
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:id="@+id/verify_et"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:digits="1234567890"
            android:inputType="phone"
            android:imeOptions="flagNoExtractUi|flagNoFullscreen"
            app:bottomLineHeight="1dp"
            app:bottomLineNormalColor="@color/colorBlack"
            app:bottomLineSelectedColor="@color/colorBlack"
            app:figures="4"
            app:selectedBackgroundColor="@color/transparent"
            app:verCodeMargin="2dp"/>
        <com.blink.academy.film.widgets.dialog.login.VerificationTextView
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:id="@+id/checkphone_end_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/real_bottom">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/signin_ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">
            <ImageView
                android:visibility="gone"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_10_next"
                android:tint="@color/colorBlack"
                android:contentDescription="@null"
                android:scaleX="-1"/>
            <TextView
                android:textColor="@color/colorBlack"
                android:gravity="center"
                android:id="@+id/signin_tv_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BUTTON_BACK"
                android:textAllCaps="true"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/signin_ll_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <TextView
                android:textColor="@color/colorBlack"
                android:id="@+id/signin_tv_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BUTTON_NEXT"
                android:textAllCaps="true"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_10_next"
                android:tint="@color/colorBlack"
                android:contentDescription="@null"/>
        </LinearLayout>
        <com.blink.academy.film.widgets.OneTakeProgressBar
            android:id="@+id/signin_next_pb"
            android:visibility="gone"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:tint="#000000"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:indeterminateTint="#000000"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/real_bottom"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"/>
    <View
        android:id="@+id/click_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
