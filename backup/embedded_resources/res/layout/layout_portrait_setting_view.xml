<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_portrait_setting_view_0"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_beeper"
                android:background="#161616"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/line_beeper_top"
                    android:background="@color/settingLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <TextView
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:id="@+id/tv_beeper"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/SETTINGS_REC_BEEPER"/>
                <Switch
                    android:id="@+id/beeper_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/setting_switch_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:track="@drawable/setting_switch_track_selector"/>
                <View
                    android:id="@+id/line_beeper_bottom"
                    android:background="@color/settingLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_flash"
                android:background="#161616"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:id="@+id/tv_flash"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/SETTINGS_REC_FLASH"/>
                <Switch
                    android:id="@+id/flash_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/setting_switch_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:track="@drawable/setting_switch_track_selector"/>
                <View
                    android:id="@+id/line_flash_bottom"
                    android:background="@color/settingLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_volume_rec"
                android:background="#161616"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:id="@+id/tv_volume_rec"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/SETTINGS_VOLUME_KEY_RECORD"/>
                <Switch
                    android:id="@+id/volume_rec_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/setting_switch_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:track="@drawable/setting_switch_track_selector"/>
                <View
                    android:id="@+id/volume_rec_bottom"
                    android:background="@color/settingLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_frame_drop"
                android:background="#161616"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:id="@+id/tv_frame_drop"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/SETTINGS_FRAMEDROP_NOTICE"/>
                <Switch
                    android:id="@+id/frame_drop_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/setting_switch_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:track="@drawable/setting_switch_track_selector"/>
                <View
                    android:id="@+id/frame_drop_bottom"
                    android:background="@color/settingLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_stabilization"
                android:background="#161616"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:id="@+id/tv_stabilization"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/SETTINGS_STABILIZATION"/>
                <ImageView
                    android:id="@+id/iv_hint_stabilization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_30_info"
                    android:layout_toRightOf="@+id/tv_stabilization"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"/>
                <View
                    android:id="@+id/stabilization_hint_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_stabilization"
                    android:layout_centerVertical="true"/>
                <Switch
                    android:id="@+id/stabilization_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/setting_switch_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:track="@drawable/setting_switch_track_selector"/>
                <View
                    android:id="@+id/stabilization_bottom"
                    android:background="@color/settingLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_noise_reduction"
                android:background="#161616"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:id="@+id/tv_noise_reduction"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/SETTINGS_NOISE_REDUCTION"/>
                <Switch
                    android:id="@+id/noise_reduction_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/setting_switch_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:track="@drawable/setting_switch_track_selector"/>
                <View
                    android:id="@+id/noise_reduction_bottom"
                    android:background="@color/settingLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_sharp"
                android:background="#161616"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:id="@+id/tv_sharp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/SETTINGS_EDGE_SHARPENING"/>
                <Switch
                    android:id="@+id/sharp_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/setting_switch_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:track="@drawable/setting_switch_track_selector"/>
                <View
                    android:id="@+id/sharp_bottom"
                    android:background="@color/settingLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_screen"
                android:background="#161616"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/line_screen_top"
                    android:background="@color/settingLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <TextView
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:id="@+id/tv_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/SETTINGS_TITLE_ORIENTATION_VERTICAL"/>
                <com.blink.academy.film.widgets.SolidPointView
                    android:id="@+id/point_vertical_video"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_toRightOf="@+id/tv_screen"/>
                <Switch
                    android:id="@+id/screen_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/setting_switch_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:track="@drawable/setting_switch_track_selector"/>
                <View
                    android:id="@+id/line_screen_bottom"
                    android:background="@color/settingLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <TextView
                android:textColor="#99ffffff"
                android:id="@+id/tv_hz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/SETTINGS_FLICKER_REDUCTION"
                android:textAllCaps="true"/>
            <RelativeLayout
                android:id="@+id/rl_hz_50"
                android:background="#161616"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/line_hz50_top"
                    android:background="@color/settingLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <TextView
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:id="@+id/tv_hz50"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="50 Hz"/>
                <com.blink.academy.film.widgets.CheckView
                    android:id="@+id/v_hz50_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <View
                    android:id="@+id/line_hz50_bottom"
                    android:background="@color/settingLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_hz_60"
                android:background="#161616"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:id="@+id/tv_hz60"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="60 Hz"/>
                <com.blink.academy.film.widgets.CheckView
                    android:id="@+id/v_hz60_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <View
                    android:id="@+id/line_hz60_bottom"
                    android:background="@color/settingLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_mirror"
                android:background="#161616"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/line_mirror_top"
                    android:background="@color/settingLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <TextView
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:id="@+id/tv_mirror"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/SETTINGS_MIRRORED_SELFIE"/>
                <Switch
                    android:id="@+id/mirror_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/setting_switch_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:track="@drawable/setting_switch_track_selector"/>
                <View
                    android:id="@+id/line_mirror_bottom"
                    android:background="@color/settingLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_hdmi_performance"
                android:background="#161616"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:id="@+id/tv_hdmi_performance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/SETTINGS_PERFORMANCE_MODE"/>
                <ImageView
                    android:id="@+id/iv_hint_hdmi_performance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_30_info"
                    android:layout_toRightOf="@+id/tv_hdmi_performance"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"/>
                <View
                    android:id="@+id/hdmi_performance_hint_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_hdmi_performance"
                    android:layout_centerVertical="true"/>
                <Switch
                    android:id="@+id/hdmi_performance_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/setting_switch_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:track="@drawable/setting_switch_track_selector"/>
                <View
                    android:id="@+id/hdmi_performance_bottom"
                    android:background="@color/settingLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
