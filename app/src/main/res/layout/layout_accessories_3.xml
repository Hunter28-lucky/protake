<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_accessories_3_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_hdmi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#ffffff"
            android:gravity="center"
            android:id="@+id/tv_hdmi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/SETTINGS_ACCESORRIES_CLEAN_HDMI"/>
        <com.blink.academy.film.widgets.SwitchButton2
            android:id="@+id/sb_hdmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:sb_text_check="@string/TOGGLE_ON"
            app:sb_text_uncheck="@string/TOGGLE_OFF"/>
    </RelativeLayout>
    <View
        android:id="@+id/v_line_0"
        android:background="@drawable/preset_divider_item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_hdmi"/>
</RelativeLayout>
