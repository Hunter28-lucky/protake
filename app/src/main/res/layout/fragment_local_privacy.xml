<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:id="@+id/root_view"
    android:tag="layout/fragment_local_privacy_0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:translationZ="0dp"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center_horizontal"
                android:id="@+id/signin_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="15dp"
                android:text="@string/LABEL_ALERT"
                android:textAllCaps="true"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/tv_view"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:includeFontPadding="false"
                        android:layout_weight="1"
                        android:lineSpacingExtra="2dp"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/tv_view2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:includeFontPadding="false"
                        android:layout_weight="1"
                        android:lineSpacingExtra="3dp"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </ScrollView>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/signin_ll_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/pre_iv"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:src="@drawable/icon_7_next"
                    android:tint="@color/colorBlack"
                    android:contentDescription="@null"
                    android:alpha="0.6"
                    android:scaleX="-1"
                    app:layout_constraintBottom_toBottomOf="@+id/signin_tv_skip"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/signin_tv_skip"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:id="@+id/signin_tv_skip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/LABEL_NOT_AGREE"
                    android:alpha="0.6"
                    android:textAllCaps="true"
                    app:layout_constraintLeft_toRightOf="@+id/pre_iv"
                    app:layout_constraintTop_toTopOf="parent"/>
                <View
                    android:id="@+id/stroke_view_2"
                    android:background="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="3dp"
                    android:layout_marginTop="1dp"
                    android:alpha="0.22"
                    app:layout_constraintLeft_toLeftOf="@+id/pre_iv"
                    app:layout_constraintTop_toBottomOf="@+id/signin_tv_skip"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/signin_ll_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/signin_tv_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/LABEL_AGREE"
                    android:textAllCaps="true"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <ImageView
                    android:id="@+id/next_iv"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/icon_7_next"
                    android:tint="@color/colorBlack"
                    android:contentDescription="@null"
                    app:layout_constraintBottom_toBottomOf="@+id/signin_tv_next"
                    app:layout_constraintLeft_toRightOf="@+id/signin_tv_next"
                    app:layout_constraintTop_toTopOf="@+id/signin_tv_next"/>
                <View
                    android:id="@+id/stroke_view"
                    android:background="@color/colorGold"
                    android:layout_width="wrap_content"
                    android:layout_height="3dp"
                    android:layout_marginTop="1dp"
                    app:layout_constraintLeft_toLeftOf="@+id/signin_tv_next"
                    app:layout_constraintTop_toBottomOf="@+id/signin_tv_next"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
