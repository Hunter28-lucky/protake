<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:tag="layout/layout_auto_zoom_0"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.blink.academy.film.widgets.iso.WheelProgressZoomView
        android:layout_gravity="center_vertical"
        android:id="@+id/zoom_wheel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.blink.academy.film.widgets.iso.WheelIndicatorView
        android:layout_gravity="center_vertical"
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/zoom_bg_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.blink.academy.film.widgets.iso.ZoomButtonBgView
            android:id="@+id/zoom_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <com.blink.academy.film.widgets.iso.ZoomButtonGroup
        android:layout_gravity="center_vertical"
        android:id="@+id/zoom_button_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</FrameLayout>
