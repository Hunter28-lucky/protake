<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:id="@+id/root_view"
    android:tag="layout/layout_sign_in_0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:translationZ="0dp"
    app:cardBackgroundColor="#ffba00"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="@color/colorBlack"
            android:id="@+id/signin_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/LABEL_SIGN_IN"
            android:textAllCaps="true"/>
        <ImageView
            android:id="@+id/iv_close"
            android:padding="16dp"
            android:visibility="gone"
            android:layout_width="@dimen/_44dp"
            android:layout_height="@dimen/_44dp"
            android:src="@drawable/icon_12_subscription_close"
            android:layout_alignParentRight="true"
            android:contentDescription="@null"/>
        <TextView
            android:textColor="@color/colorBlack"
            android:gravity="start"
            android:id="@+id/signin_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/TEXT_SIGN_IN_ANDROID_1"
            android:layout_below="@+id/signin_tv_title"
            android:lineSpacingExtra="2dp"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/colorBlack"
            android:id="@+id/signin_tv_area"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signin_tv_content"
            android:textAllCaps="true"/>
        <RelativeLayout
            android:orientation="horizontal"
            android:id="@+id/signin_ll_code_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signin_tv_content">
            <TextView
                android:textColor="@color/colorBlack"
                android:gravity="start"
                android:id="@+id/signin_tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/signin_iv_code"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_10_next"
                android:tint="@color/colorBlack"
                android:layout_toRightOf="@+id/signin_tv_code"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:rotation="90"/>
        </RelativeLayout>
        <com.blink.academy.film.widgets.BottomLineEditText
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorBlack"
            android:gravity="center_vertical"
            android:id="@+id/signin_et"
            android:background="@null"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:digits="1234567890"
            android:layout_toRightOf="@+id/signin_ll_code_area"
            android:layout_below="@+id/signin_tv_content"
            android:inputType="phone"
            android:imeOptions="flagNoExtractUi|flagNoFullscreen|actionNext"/>
        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/real_bottom">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/signin_ll_back"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/icon_10_next"
                    android:tint="@color/colorBlack"
                    android:contentDescription="@null"
                    android:scaleX="-1"/>
                <TextView
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:id="@+id/signin_tv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/BUTTON_BACK"
                    android:textAllCaps="true"/>
            </LinearLayout>
            <TextView
                android:textColor="@color/colorBlack"
                android:gravity="center"
                android:id="@+id/signin_tv_skip"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BUTTON_SKIP"
                android:textAllCaps="true"/>
            <TextView
                android:textColor="@color/colorBlack"
                android:gravity="center"
                android:id="@+id/signin_tv_cancel"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BUTTON_CANCEL"
                android:textAllCaps="true"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/signin_ll_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <TextView
                    android:textColor="@color/colorBlack"
                    android:id="@+id/signin_tv_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/BUTTON_NEXT"
                    android:textAllCaps="true"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/icon_10_next"
                    android:tint="@color/colorBlack"
                    android:contentDescription="@null"/>
            </LinearLayout>
            <com.blink.academy.film.widgets.OneTakeProgressBar
                android:id="@+id/signin_next_pb"
                android:visibility="gone"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:tint="#000000"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:indeterminateTint="#000000"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/real_bottom"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/click_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</androidx.cardview.widget.CardView>
